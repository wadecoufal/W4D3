<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
  </head>

  <body>
    <header>
      
      <% if logged_in? %>
        Welcome, <%= current_user.username %>
      <% else %>
        <a href="<%= new_session_url %>">Sing In?</a>
        <a href="<%= new_user_url %>">Sing Up?</a>
      <% end %>
    </header>
    
    <%= yield %>
  </body>
</html>
